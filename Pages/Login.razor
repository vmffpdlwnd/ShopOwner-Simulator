    }

    .feature-list {
        margin: 0;
        padding-left: 1.5rem;
        list-style: none;
    }

    .feature-list li {
        padding: 0.5rem 0;
        color: #666;
        font-size: 0.95rem;
    }

    .login-footer {
        text-align: center;
        border-top: 1px solid #eee;
        padding-top: 1rem;
    }

