@page "/mercenary"
@implements IAsyncDisposable
@using ShopOwnerSimulator.Services
@using ShopOwnerSimulator.State
@inject GameState GameState
@inject IMercenaryService MercenaryService

<PageTitle>용병 - 상점주인 시뮬레이터</PageTitle>

<div class="mercenary-container">
    <h1>용병 관리</h1>

    <div class="mercenary-content">
        <!-- Mercenary List -->
        <div class="merc-list-panel">
            <h2>보유 용병</h2>
            <div class="merc-list">
                @if (GameState.Mercenaries != null && GameState.Mercenaries.Count > 0)
                {
                    @foreach (var merc in GameState.Mercenaries)
                    {
                        <div class="merc-item @(SelectedMercenaryId == merc.Id ? "selected" : "")" 
                            @onclick="() => SelectMercenary(merc.Id)">
                            <div class="merc-header">
                                <h3>@merc.Name</h3>
                                <span class="level-badge">Lv @merc.Level</span>
                            </div>
                            <div class="merc-brief">
                                <div class="brief-stat">
                                    <span>ATK: @merc.Stats.Attack</span>
                                </div>
                                <div class="brief-stat">
                                    <span>DEF: @merc.Stats.Defense</span>
                                </div>
                                <div class="brief-stat">
                                    <span>SPD: @merc.Stats.Speed</span>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="empty">아직 용병이 없습니다</p>
                }
            </div>
        </div>

        <!-- Mercenary Details -->
        <div class="merc-details-panel">
            @if (!string.IsNullOrEmpty(SelectedMercenaryId) && SelectedMercenary != null)
            {
                <h2>용병 상세정보</h2>
                <div class="details-card">
                    <div class="detail-header">
                        <h3>@SelectedMercenary.Name</h3>
                        <span class="level-badge large">레벨 @SelectedMercenary.Level</span>
                    </div>

                    <!-- Stats -->
                    <div class="stats-section">
                        <h4>능력치</h4>
                        <div class="stats-grid">
                            <div class="stat-box">
                                <span class="stat-label">공격력</span>
                                <div class="stat-bar">
                                    <div class="stat-fill" style="width: @(SelectedMercenary.Stats.Attack * 2)%"></div>
                                </div>
                                <span class="stat-value">@SelectedMercenary.Stats.Attack</span>
                            </div>
                            <div class="stat-box">
                                <span class="stat-label">방어력</span>
                                <div class="stat-bar">
                                    <div class="stat-fill" style="width: @(SelectedMercenary.Stats.Defense * 3)%"></div>
                                </div>
                                <span class="stat-value">@SelectedMercenary.Stats.Defense</span>
                            </div>
                            <div class="stat-box">
                                <span class="stat-label">속도</span>
                                <div class="stat-bar">
                                    <div class="stat-fill" style="width: @(SelectedMercenary.Stats.Speed * 2)%"></div>
                                </div>
                                <span class="stat-value">@SelectedMercenary.Stats.Speed</span>
                            </div>
                        </div>
                    </div>

                    <!-- Experience -->
                    <div class="exp-section">
                        <h4>경험치</h4>
                        <div class="exp-bar">
                            <div class="exp-fill" style="width: @((SelectedMercenary.Experience % 1000) / 10)%"></div>
                        </div>
                        <div class="exp-text">@SelectedMercenary.Experience / 1000</div>
                    </div>

                    <!-- Equipment -->
                    <div class="equipment-section">
                        <h4>장비 (@SelectedMercenary.EquipmentInventory.Count 슬롯 사용중)</h4>
                        <div class="equipment-list">
                            @if (SelectedMercenary.EquipmentInventory != null && SelectedMercenary.EquipmentInventory.Count > 0)
                            {
                                @foreach (var slot in SelectedMercenary.EquipmentInventory)
                                {
                                    <div class="equipment-item">
                                        <span class="slot-num">슬롯 @(slot.Key + 1)</span>
                                        <span class="equipment-name">@ShopOwnerSimulator.Utils.FormatHelper.GetItemDisplayName(GameState.Inventory?.FirstOrDefault(i => i.Id == slot.Value)?.ItemTemplateId ?? slot.Value)</span>
                                        <button class="btn btn-sm btn-danger" @onclick="() => UnequipItem(slot.Key)">
                                            제거
                                        </button>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="empty-slot">장착된 장비가 없습니다</p>
                            }
                        </div>

                        <h4 style="margin-top: 1rem;">사용가능 장비</h4>
                        <div class="available-equipment">
                            @if (AvailableEquipment != null && AvailableEquipment.Count > 0)
                            {
                                @foreach (var item in AvailableEquipment)
                                {
                                    <div class="equip-option">
                                        <span>@ShopOwnerSimulator.Utils.FormatHelper.GetItemDisplayName(item.ItemTemplateId)</span>
                                        <button class="btn btn-sm btn-primary" @onclick="() => EquipItem(item.Id)">
                                            장착
                                        </button>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="empty-slot">사용가능한 장비가 없습니다</p>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="no-selection">
                    <p>용병을 선택하여 상세정보를 확인하세요</p>
                </div>
            }
        </div>
    </div>
</div>

