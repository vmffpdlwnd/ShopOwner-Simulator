@code {
    private string SelectedMercenaryId = "";
    private ShopOwnerSimulator.Models.Entities.Mercenary SelectedMercenary = null;
    private List<ShopOwnerSimulator.Models.Entities.InventoryItem> AvailableEquipment = new();

    protected override async Task OnInitializedAsync()
    {
        GameState.OnStateChanged += StateHasChanged;
        await base.OnInitializedAsync();
    }

    private void SelectMercenary(string mercenaryId)
    {
        SelectedMercenaryId = mercenaryId;
        SelectedMercenary = GameState.Mercenaries?.FirstOrDefault(m => m.Id == mercenaryId);
        UpdateAvailableEquipment();
    }

    private void UpdateAvailableEquipment()
    {
        AvailableEquipment = GameState.Inventory?
            .Where(i => !i.IsEquipped && i.ItemTemplateId.Contains("equipment"))
            .ToList() ?? new();
    }

    private async Task EquipItem(string itemId)
    {
        if (string.IsNullOrEmpty(SelectedMercenaryId))
            return;

        try
        {
            await MercenaryService.EquipAsync(SelectedMercenaryId, itemId);
            await GameState.LoadGameStateAsync();
            SelectMercenary(SelectedMercenaryId);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error equipping item: {ex.Message}");
        }
    }

    private async Task UnequipItem(int slotIndex)
    {
        if (string.IsNullOrEmpty(SelectedMercenaryId))
            return;

        try
        {
            await MercenaryService.UnequipAsync(SelectedMercenaryId, slotIndex);
            await GameState.LoadGameStateAsync();
            SelectMercenary(SelectedMercenaryId);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error unequipping item: {ex.Message}");
        }
    }

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        GameState.OnStateChanged -= StateHasChanged;
    }
}