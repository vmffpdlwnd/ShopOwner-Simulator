@page "/general-shop"
@implements IAsyncDisposable
@using ShopOwnerSimulator.State
@using ShopOwnerSimulator.Services.Implementations
@inject GameState GameState
@inject IDynamoDBService DynamoDB

<PageTitle>상점 - 상점주인 시뮬레이터</PageTitle>

<div class="shop-container">
    <h1>일반 상점</h1>
    <p class="subtitle">제작에 필요한 재료를 구매하세요</p>

    <div class="shop-content">
        <div class="materials-grid">
            @foreach (var material in GetAvailableMaterials())
            {
                <div class="material-card">
                    <div class="card-header">
                        <h3>@material.Name</h3>
                        <span class="price">@material.Price G</span>
                    </div>
                    <div class="card-body">
                        <p class="description">@material.Description</p>
                        <div class="current-price">
                            <span class="label">현재 가격</span>
                            <span class="value">@material.Price G</span>
                        </div>
                        <div class="price-change @(material.PriceChange >= 0 ? "up" : "down")">
                            @(material.PriceChange >= 0 ? "↑" : "↓") @Math.Abs(material.PriceChange)%
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="number" min="1" @bind="material.BuyQuantity" class="qty-input" placeholder="수량">
                        <button class="btn btn-primary" @onclick="() => BuyMaterial(material)">
                            구매 @(material.Price * material.BuyQuantity) G
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .shop-container {
        padding: 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .shop-container h1 {
        margin: 0 0 0.5rem 0;
        font-size: 2rem;
        color: #333;
    }

    .subtitle {
        color: #666;
        margin-bottom: 2rem;
    }

    .shop-content {
        background: white;
        border-radius: 0.75rem;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .materials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .material-card {
        border: 1px solid #eee;
        border-radius: 0.5rem;
        overflow: hidden;
        transition: all 0.2s;
    }

    .material-card:hover {
        border-color: #007bff;
        box-shadow: 0 2px 8px rgba(0, 123, 255, 0.1);
    }

    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-header h3 {
        margin: 0;
        font-size: 1.1rem;
    }

    .price {
        background: rgba(255, 255, 255, 0.3);
        padding: 0.25rem 0.75rem;
        border-radius: 0.25rem;
        font-weight: 600;
    }

    .card-body {
        padding: 1rem;
    }

    .description {
        color: #666;
        font-size: 0.875rem;
        margin: 0 0 1rem 0;
    }

    .current-price {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }

    .label {
        color: #666;
        font-size: 0.875rem;
    }

    .value {
        font-weight: 600;
        color: #333;
    }

    .price-change {
        font-weight: 600;
        font-size: 0.875rem;
        padding: 0.5rem;
        border-radius: 0.25rem;
        text-align: center;
    }

    .price-change.up {
        background: rgba(40, 167, 69, 0.1);
        color: #28a745;
    }

    .price-change.down {
        background: rgba(220, 53, 69, 0.1);
        color: #dc3545;
    }

    .card-footer {
        display: flex;
        gap: 0.75rem;
        padding: 1rem;
        background: #f8f9fa;
    }

    .qty-input {
        width: 80px;
        padding: 0.5rem;
        border: 1px solid #ddd;
        border-radius: 0.375rem;
        font-size: 0.875rem;
    }

    .btn {
        flex: 1;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.375rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-primary {
        background: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background: #0056b3;
    }

    @@media (max-width: 768px) {
        .materials-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    private class MaterialDisplay
    {
        public string Name { get; set; }
        public string Description { get; set; }
        public long Price { get; set; }
        public int PriceChange { get; set; }
        public int BuyQuantity { get; set; } = 1;
    }

    protected override async Task OnInitializedAsync()
    {
        GameState.OnStateChanged += StateHasChanged;
        await LoadMaterialsAsync();
        await base.OnInitializedAsync();
    }

    private List<MaterialDisplay> _materials = new();

    private List<MaterialDisplay> GetAvailableMaterials()
    {
        return _materials;
    }

    private async Task LoadMaterialsAsync()
    {
        var templates = await DynamoDB.GetAllItemTemplatesAsync();
        _materials = templates
            .Where(t => t.Type == ShopOwnerSimulator.Models.Entities.ItemType.Material)
            .Select(t => new MaterialDisplay
            {
                Name = t.Name,
                Description = t.Description ?? "",
                Price = t.BasePrice,
                PriceChange = new Random().Next(-10, 15),
                BuyQuantity = 1
            })
            .ToList();
    }

    private void BuyMaterial(MaterialDisplay material)
    {
        // 구매 로직 구현
        Console.WriteLine($"{material.Name} {material.BuyQuantity}개 구매");
    }

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        GameState.OnStateChanged -= StateHasChanged;
    }
}