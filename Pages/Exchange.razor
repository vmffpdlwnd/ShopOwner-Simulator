@page "/exchange"
@implements IAsyncDisposable
@using ShopOwnerSimulator.Services
@using ShopOwnerSimulator.Models.DTOs
@using ShopOwnerSimulator.Models.Entities
@using ShopOwnerSimulator.State
@inject GameState GameState
@inject IExchangeService ExchangeService

<PageTitle>거래소 - 상점주인 시뮬레이터</PageTitle>

<div class="exchange-container">
    <h1>플레이어 거래소</h1>

    <div class="exchange-content">
        <!-- Orders List -->
        <div class="orders-panel">
            <h2>거래 가능한 주문</h2>
            <div class="filters">
                <input type="text" class="search-input" placeholder="아이템 검색..." @oninput="e => FilterItems(e.Value.ToString())">
            </div>
            <div class="orders-list">
                @if (FilteredOrders != null && FilteredOrders.Count > 0)
                {
                    @foreach (var order in FilteredOrders)
                    {
                        <div class="order-card">
                            <div class="order-header">
                                <h3>@ShopOwnerSimulator.Utils.FormatHelper.GetItemDisplayName(order.ItemTemplateId)</h3>
                                <span class="price">@order.UnitPrice G</span>
                            </div>
                            <div class="order-details">
                                <div class="detail-row">
                                    <span>재고</span>
                                    <span class="value">@order.Remaining/@order.Quantity</span>
                                </div>
                                <div class="detail-row">
                                    <span>판매자</span>
                                    <span class="value">@order.SellerId.Substring(0, 8)...</span>
                                </div>
                                <div class="detail-row">
                                    <span>등록일</span>
                                    <span class="value">@order.ListedTime.ToString("MMM dd, HH:mm")</span>
                                </div>
                            </div>
                            <div class="buy-section">
                                <input type="number" min="1" @bind="BuyQuantity" class="qty-input" placeholder="수량">
                                <button class="btn btn-primary" @onclick="() => BuyOrder(order)">
                                    구매 @(BuyQuantity * order.UnitPrice) G
                                </button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="empty">주문이 없습니다</p>
                }
            </div>
        </div>

        <!-- My Orders -->
        <div class="my-orders-panel">
            <h2>내 주문</h2>
            <div class="my-orders-list">
                @if (MyOrders != null && MyOrders.Count > 0)
                {
                    @foreach (var order in MyOrders)
                    {
                            <div class="my-order-card @(order.Status == OrderStatus.Completed ? "completed" : "")">
                            <div class="order-info">
                                <h4>@ShopOwnerSimulator.Utils.FormatHelper.GetItemDisplayName(order.ItemTemplateId)</h4>
                                <div class="order-stat">
                                    <span>수량:</span>
                                    <span class="value">@order.Remaining/@order.Quantity</span>
                                </div>
                                <div class="order-stat">
                                    <span>단가:</span>
                                    <span class="value">@order.UnitPrice G</span>
                                </div>
                                <div class="order-stat">
                                    <span>상태:</span>
                                    <span class="status-badge @order.Status.ToString().ToLower()">@order.Status.ToString()</span>
                                </div>
                            </div>
                            @if (order.Status == OrderStatus.Active)
                            {
                                <button class="btn btn-danger" @onclick="() => CancelOrder(order.Id)">
                                    취소
                                </button>
                            }
                        </div>
                    }
                }
                else
                {
                    <p class="empty">활성화된 주문이 없습니다</p>
                }
            </div>

            <h2 style="margin-top: 2rem;">새 아이템 등록</h2>
            <div class="list-form">
                <div class="form-group">
                    <label>아이템 선택</label>
                    <select @onchange="e => ListItemId = e.Value.ToString()" class="form-control">
                        <option value="">아이템 선택...</option>
                        @if (GameState.Inventory != null)
                        {
                            @foreach (var item in GameState.Inventory.Where(i => !i.IsEquipped))
                            {
                                <option value="@item.ItemTemplateId">@ShopOwnerSimulator.Utils.FormatHelper.GetItemDisplayName(item.ItemTemplateId) (x@(item.Quantity))</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>수량</label>
                    <input type="number" min="1" @bind="ListQuantity" class="form-control">
                </div>
                <div class="form-group">
                    <label>단가</label>
                    <input type="number" min="1" @bind="ListPrice" class="form-control">
                </div>
                <button class="btn btn-primary" @onclick="ListItem" disabled="@(string.IsNullOrEmpty(ListItemId))">
                    등록하기
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .exchange-container {
        padding: 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .exchange-container h1 {
        margin-bottom: 2rem;
        font-size: 2rem;
        color: #333;
    }

    .exchange-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
    }

    .orders-panel,
    .my-orders-panel {
        background: white;
        border-radius: 0.75rem;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .orders-panel h2,
    .my-orders-panel h2 {
        margin: 0 0 1.5rem 0;
        font-size: 1.25rem;
        color: #333;
    }

    .filters {
        margin-bottom: 1rem;
    }

    .search-input {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 0.375rem;
        font-size: 0.875rem;
    }

    .search-input:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
    }

    .orders-list,
    .my-orders-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .order-card,
    .my-order-card {
        border: 1px solid #eee;
        border-radius: 0.5rem;
        padding: 1rem;
        transition: all 0.2s;
    }

    .order-card:hover {
        border-color: #007bff;
        box-shadow: 0 2px 8px rgba(0, 123, 255, 0.1);
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .order-header h3 {
        margin: 0;
        font-size: 1rem;
        color: #333;
    }

    .price {
        background: #28a745;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 0.25rem;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .order-details,
    .order-info {
        margin-bottom: 1rem;
    }

    .detail-row,
    .order-stat {
        display: flex;
        justify-content: space-between;
        font-size: 0.875rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .detail-row:last-child,
    .order-stat:last-child {
        border-bottom: none;
    }

    .value {
        font-weight: 600;
        color: #007bff;
    }

    .buy-section {
        display: flex;
        gap: 0.75rem;
    }

    .qty-input {
        width: 80px;
        padding: 0.5rem;
        border: 1px solid #ddd;
        border-radius: 0.375rem;
        font-size: 0.875rem;
    }

    .btn {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.375rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-primary {
        background: #007bff;
        color: white;
        flex: 1;
    }

    .btn-primary:hover:not(:disabled) {
        background: #0056b3;
    }

    .btn-primary:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .btn-danger {
        background: #dc3545;
        color: white;
        width: 100%;
    }

    .btn-danger:hover {
        background: #c82333;
    }

    .my-order-card.completed {
        opacity: 0.7;
        background: #f0f0f0;
    }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .status-badge.active {
        background: #ffc107;
        color: #333;
    }

    .status-badge.completed {
        background: #28a745;
        color: white;
    }

    .list-form {
        border-top: 1px solid #eee;
        padding-top: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-group label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ddd;
        border-radius: 0.375rem;
        font-size: 0.875rem;
    }

    .form-control:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
    }

    .empty {
        color: #999;
        text-align: center;
        padding: 1.5rem;
    }

    @@media (max-width: 1024px) {
        .exchange-content {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    private List<ExchangeOrder> AllOrders = new();
    private List<ExchangeOrder> FilteredOrders = new();
    private List<ExchangeOrder> MyOrders = new();
    private int BuyQuantity = 1;
    private string ListItemId = "";
    private int ListQuantity = 1;
    private long ListPrice = 100;

    protected override async Task OnInitializedAsync()
    {
        GameState.OnStateChanged += StateHasChanged;
        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        try
        {
            // Load available items and their orders
            var items = await ExchangeService.GetAvailableItemsAsync();
            // For now, load all orders - in real implementation would paginate
            MyOrders = await ExchangeService.GetMyOrdersAsync(GameState.Player?.Id ?? "");
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error loading orders: {ex.Message}");
        }
    }

    private void FilterItems(string search)
    {
        if (string.IsNullOrEmpty(search))
            FilteredOrders = new List<ExchangeOrder>(AllOrders);
        else
            FilteredOrders = AllOrders.Where(o => o.ItemTemplateId.Contains(search, StringComparison.OrdinalIgnoreCase)).ToList();
    }

    private async Task BuyOrder(ExchangeOrder order)
    {
        try
        {
            var request = new ExchangeBuyRequest { OrderId = order.Id, Quantity = BuyQuantity };
            await ExchangeService.BuyAsync(request);
            await GameState.LoadGameStateAsync();
            await LoadOrders();
            BuyQuantity = 1;
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error buying order: {ex.Message}");
        }
    }

    private async Task ListItem()
    {
        try
        {
            var request = new ExchangeListRequest 
            { 
                ItemTemplateId = ListItemId, 
                Quantity = ListQuantity, 
                UnitPrice = ListPrice 
            };
            await ExchangeService.ListOrderAsync(request);
            await GameState.LoadGameStateAsync();
            await LoadOrders();
            ListItemId = "";
            ListQuantity = 1;
            ListPrice = 100;
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error listing item: {ex.Message}");
        }
    }

    private async Task CancelOrder(string orderId)
    {
        try
        {
            await ExchangeService.CancelOrderAsync(orderId);
            await GameState.LoadGameStateAsync();
            await LoadOrders();
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error canceling order: {ex.Message}");
        }
    }

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        GameState.OnStateChanged -= StateHasChanged;
    }
}